<h2>All Authors</h2>
<form action="" method="get">
  <label for="name">Name</label>
  <input
    type="text"
    name="name"
    id="name"
    placeholder="author name"
    {{!-- value={{query}} --}}
  />
  <button type="submit">Search</button>
  {{error}}
</form><br /><br />

<h2>list of authors</h2>
{{#each author}}
  <h4>{{name}}</h4>
  <a href="authors/{{_id}}"><button>View</button></a>
  <a href="authors/{{_id}}"><button>Edit</button></a>
  <form action="authors/{{_id}}?_method=DELETE" method="post">
    <button type="submit">Delete</button>
  </form>
{{/each}}